/ {
	aliases {
		spi0 = &espi0;
	};
};

&soc {
	i2c@3000 {
		rtc@68 {
			compatible = "pericom,pt7c4338";
			reg = <0x68>;
		};
	};

	spi@7000 {
		status = "okay";
		flash@0 {
			compatible = "jedec,spi-nor";
			#address-cells = <1>;
			#size-cells = <1>;
			reg = <0>;
			spi-max-frequency = <10000000>; /* input clock */
		};
	};
};
